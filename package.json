{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jamie Hale <jamiesonhale@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./src",
    "start": "./node_modules/.bin/babel-node ./src/index.js",
    "start:dev": "nodemon --delay 1500ms --exec babel-node ./src/index.js",
    "db:migration:make": "knex --esm migrate:make",
    "db:seed:make": "knex --esm seed:make",
    "db:migrate": "knex --esm migrate:latest",
    "db:rollback": "knex --esm migrate:rollback",
    "db:seed": "knex --esm seed:run",
    "docker:db": "docker-compose run db psql -h db -U rain_api -d rain",
    "docker:db:migrate": "docker-compose run api yarn db:migrate",
    "docker:db:rollback": "docker-compose run api yarn db:rollback",
    "docker:db:seed": "docker-compose run api yarn db:seed",
    "docker:db:purge": "rm -rf var/db",
    "docker:build:migrate": "DOCKER_BUILDKIT=1 docker build -f Dockerfile.migrate -t rain/api-migrate:latest ."
  },
  "dependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/preset-env": "^7.15.8",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "knex": "^0.95.11",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "ramda": "^0.27.1"
  },
  "devDependencies": {
    "@babel/node": "^7.15.8",
    "@babel/register": "^7.15.3",
    "eslint": "^8.0.1",
    "nodemon": "^2.0.14"
  }
}
